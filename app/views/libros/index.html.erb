<br><br><br><br>
<div class="w3-row-padding">
  <div class="w3-half">
    <div class="w3-card white">
      <div class="w3-container w3-red">
	<h1>Libros</h1>
      </div>
      <ul class="w3-ul w3-border-top">
	<% @libros.each do |libro| %>
	<% i = 1 %>
	<li>
	  <%= link_to libro.titulo, '#', onclick: "document.getElementById('id<%= i %>').style.display='block'" %>
	</li>
	<% i += 1 %>
	<% end %>	
      </ul>
    </div>
  </div>
  <br>

  <% @libros.each do |libro| %>
  <% i = 1 %>
  <div id="id<%= i %>" class="w3-modal">
    <div class="w3-modal-content">
      <header class="w3-container w3-red"> 
	<span onclick="document.getElementById('id<%= i %>').style.display='none'" 
	      class="w3-closebtn">×</span>
	<h2>Información</h2>
      </header>
      <div class="w3-container">
	<p><strong>Título: </strong>libro.titulo</p>
	<p><strong>Autor: </strong>libro.autor</p>
	<p><strong>ISBN: </strong>libro.isbn</p>
      </div>
      <% if current_user %>
      <div class="w3-center">
        <button class="w3-btn w3-blue">Like</button>
      </div>
      <br>
      <div class="w3-center">
        <button class="w3-btn w3-blue">Dislike</button>
      </div>
      <% end %>
      <br>
      <footer class="w3-container w3-red">
	<p>&nbsp;</p>
      </footer>
    </div>
  </div>
  <% i += 1 %>
  <% end %>
  
  <%= render 'layouts/searchbox' %>
</div>
<br> <br> <br>
