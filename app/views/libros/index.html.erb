<br><br><br><br>
<div class="w3-row-padding">
  <div class="w3-half">
    <div class="w3-card white">
      <div class="w3-container w3-red">
	<h1>Libros</h1>
      </div>
      <ul class="w3-ul w3-border-top">
	<% i = 1 %>
	<% @libros.each do |libro| %>
	<li>
	  <a href="#" onclick="document.getElementById('id<%= i %>').style.display='block'"><%= libro.title %></a>
	</li>
	<% i += 1 %>
	<% end %>	
      </ul>
    </div>
  </div>
  <br>

  <% i = 1 %>
  <% @libros.each do |libro| %>
  <div id="id<%= i %>" class="w3-modal">
    <div class="w3-modal-content">
      <header class="w3-container w3-red"> 
	<span onclick="document.getElementById('id<%= i %>').style.display='none'" 
	      class="w3-closebtn">×</span>
	<h2>Información</h2>
      </header>
      <div class="w3-container">
	<% if libro.title %>
        <p><strong>Título: </strong> <%= libro.title %></p>
        <% end %>
 	<% if libro.title_long %>
        <p><strong>Título largo: </strong> <%= libro.title_long %></p>
        <% end %>
 	<% if libro.authors_text %>
        <p><strong>Autor(es): </strong> <%= libro.authors_text %></p>
        <% end %>
 	<% if libro.publisher_text["__content__"] %>
        <p><strong>Editorial: </strong> <%= libro.publisher_text["__content__"] %></p>
        <% end %>
 	<% if libro.isbn13 %>
        <p><strong>ISBN: </strong> <%= libro.isbn13 %></p>
        <% end %>
 	<% if libro.isbn %>
        <p><strong>ISBN 10: </strong> <%= libro.isbn %></p>
        <% end %>
      </div>
      <% if current_user %>
      <div class="w3-center">
        <button class="w3-btn w3-blue">Like</button>
      </div>
      <br>
      <div class="w3-center">
        <button class="w3-btn w3-blue">Dislike</button>
      </div>
      <% end %>
      <br>
      <footer class="w3-container w3-red">
	<p>&nbsp;</p>
      </footer>
    </div>
  </div>
  <% i += 1 %>
  <% end %>
  
  <%= render 'layouts/searchbox' %>
</div>
<br> <br> <br>
