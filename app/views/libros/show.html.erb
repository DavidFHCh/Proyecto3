<br><br><br><br>
<div class="w3-row-padding">
  <div class="w3-half">
    <div class="w3-card white">
      <div class="w3-container w3-red">
	<h1>Libro</h1>
      </div>
      <ul class="w3-ul w3-border-top">
	<li>
	  <%= link_to @libro.titulo, '#', onclick: "document.getElementById('id01').style.display='block'" %>
	</li>	
      </ul>
    </div>
  </div>
  <br>
  
  <div id="id01" class="w3-modal">
    <div class="w3-modal-content">
      <header class="w3-container w3-red"> 
	<span onclick="document.getElementById('id01').style.display='none'" 
	      class="w3-closebtn">×</span>
	<h2>Información</h2>
      </header>
      <div class="w3-container">
	<% if @libro_isbn.nil? %>
	<p><strong>Título: </strong> <%= @libro.titulo %></p>
	<p><strong>Autor(es): </strong> <%= @libro.autor %></p>
	<p><strong>ISBN: </strong> <%= @libro.codigo %></p>
	<% else %>
	<p><strong>Título: </strong> <%= @libro_isbn.title %></p>
	<p><strong>Título largo: </strong> <%= @libro_isbn.title_long %></p>
	<p><strong>Autor(es): </strong> <%= @libro_isbn.authors_text %></p>
	<p><strong>Editorial: </strong> <%= @libro_isbn.publisher_text["__content__"] %></p>
	<p><strong>ISBN: </strong> <%= @libro_isbn.isbn %></p>
	<p><strong>ISBN13: </strong> <%= @libro_isbn.isbn13 %></p>
	<% end %>
      </div>
      <div class="w3-center">
        <button class="w3-btn w3-blue">Like</button>
      </div>
      <br>
      <div class="w3-center">
        <button class="w3-btn w3-blue">Dislike</button>
      </div>
      <br>
      <footer class="w3-container w3-red">
	<p> </p>
      </footer>
    </div>
  </div>

  <%= render 'layouts/searchbox' %>
</div>
<br> <br> <br>
