      .displayed {
      display: block;
      margin-left: auto;
      margin-right:auto;
      }
    </style>
  </head>
  <body>
    <%= render 'layouts/header' %>
    
    <%= yield %>
    
    <%= render 'layouts/footer' %>
  </body>
</html>
