<header class="w3-container w3-theme" id="header">
  <div class="w3-topnav w3-large w3-theme">
    <i class="fa fa-home w3-xlarge"><%= link_to "Inicio", root_path %></i>
    <%= link_to "Facultades", facultades_path %>
    <%= link_to "Carreras", carreras_path %>
    <%= link_to "Libros", libros_path %>
    <%= link_to "Materias", materias_path %>
    <% if current_user %>
    <%= link_to "Cerrar Sesión", signout_path, class: "w3-right" %>
    <div class="w3-right">
      ¡Hola <strong><%= current_user.nombre %></strong>!
    </div>
    <% else %>
    <%= link_to "Iniciar Sesión", "/auth/google_oauth2", class: "w3-right" %>
    <% end %>
  </div>
  <% if @header %>
  <h1><%= @header %></h1>
  <% end %>
</header>
