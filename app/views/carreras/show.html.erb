<br><br><br><br>
<% if @materias.empty? %>
<p>No hay materias para <%= @title %></p>
<% else %>
<div class="w3-row-padding">
  <div class="w3-half">
    <div class="w3-card white">
      <div class="w3-container w3-red">
	<h1>Materias</h1>
      </div>
      <ul class="w3-ul w3-border-top">
	<% @materias.each do |materia| %>
	<li>
	  <%= link_to materia.nombre, materia %>
	</li>
	<% end %>
      </ul>
    </div>
  </div>
  <br>
  <% end %>

  <%= render 'layouts/searchbox' %>
</div>
<br><br><br>
